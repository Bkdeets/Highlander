    <h1>Create Post</h1>

    <form id="form" action="/create_post" method="POST">

      <div class="form-group">
        <label for="exampleFormControlInput1">Post Title</label>
        <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Title">
      </div>

      <div class="form-group">
        <label for="exampleFormControlInput1">Image (main):</label>
        <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Main image URL">
      </div>

      <div class="form-group">
        <label for="exampleFormControlInput1">Image:</label>
        <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Image URL">
      </div>

      <div class="form-group">
        <label for="exampleFormControlInput1">Image:</label>
        <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Image URL">
      </div>

      <div class="form-group">
        <label for="exampleFormControlSelect1">Does this loaction require entrance fee?</label>
        <select class="form-control">
          <option>Not Sure</option>
          <option>Yes</option>
          <option>No</option>
        </select>
      </div>

      <div class="form-group">
        <label for="exampleFormControlSelect1">Is this location a private property?</label>
        <select class="form-control">
          <option>Not Sure</option>
          <option>Yes</option>
          <option>No</option>
        </select>
      </div>

      <div class="form-group">
        <label for="exampleFormControlSelect1">Does this location require registration?</label>
        <select class="form-control">
          <option>Not Sure</option>
          <option>Yes</option>
          <option>No</option>
        </select>
      </div>

      <div class="form-group">
        <label for="exampleFormControlTextarea1">Description:</label>
        <textarea class="form-control" rows="3"></textarea>
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
      <button type="reset" class="btn btn-primary">Clear</button>
      <a class="btn btn-primary" href="/" role="button">Cancel</a>

    </form>


  </div>


    <!-- Optional JavaScript -->
