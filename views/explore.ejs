    <title>Explore</title>


    <style type="text/css">


    #post_box {
      width:300px;
      height:800px;
      overflow-y: scroll;
    }

    #main{




      width:1400px;
      margin-left: 8%;
      margin-top: 10px;
    }

    #left_column{
      float: left;


    }

    #right_column{

      margin-top: 15px;
      width:380px;
      height:700px;
      background-color: #DFECF0;
      border-radius: 10px;
      float: right;



    }

    #main_row{

      width:1400px;

    }

    #nav_bar {

      margin: 0 0;
      width:1400px;
      border-radius: 10px;
      background-color: #8FDBF2;
    }


    .post_pic {
      width:70px;
      height:45px;
      object-fit: cover;
    }

    .post_info {
      margin-left: 10px;
      margin-top: 5px;
      font-size: 10px;
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
      max-width: 30ch;

    }

    .post_row{
      width:300px;



    }


