        <div class="col">

          <div id="mapid" style="width: 1200px; height: 800px;"></div>
        </div>




        <div class="col">

          <div id="post_box" class="container">

            <% popups.forEach(function(popup){ %>


                <div class="container">
                  <div class="row">
                    <div class="col">

                      <a href="/post_detail/<%-popup.post_id%>"><img src ="<%= popup.image_1%>" class="img-thumbnail"></a>
