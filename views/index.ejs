<!DOCTYPE html>
<html>
<head>

  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">


  <title>Highlander</title>

  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">



  <style type="text/css">

  #main {
    margin: 0 13.5%;
    padding-top:10px;
    width:1200px;


  }

  #nav_bar {
    width:1200px;
    background-color: #8FDBF2;
    border-radius: 10px;
  }

  #first_row{
    padding-top: 20px;
  }


   .index_pic {
     width:395px;
     height:300px;
     object-fit: cover;
   }

   .col {
     width:400px;
     margin: 0 0;
   }

   .row {
     width:1200px;
   }


   .up{
     position:absolute;
     font-size: 12px;
     top:8px;
     left:34px;
     color:white;
     z-index: 2;

   }

   .down{
     position:absolute;
     font-size: 12px;
     top:8px;
     left:65px;
     color:white;
     z-index: 2;
   }

   .fa-sort-up{
     position:absolute;
     font-size: 60px;
     top:1px;
     left:20px;
     opacity: 0.5;
     color:grey;
     z-index: 1;
   }

   .fa-sort-down{
     position:absolute;
     font-size: 60px;
     top:-25px;
     left:50px;
     opacity: 0.5;
     color:grey;
     z-index: 1;
   }

   .user_pic{
     width:40px;
     height:40px;
     position: absolute;
     bottom: 43px;
     left:20px;
     object-fit: cover;
   }









  </style>


</head>








<body>




    <div id = "main" class="container">





      <nav id="nav_bar" class="navbar navbar-expand-lg navbar-light">
        <a class="navbar-brand" href="/">Highlander</a>

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">

            <li class="nav-item active">
              <a class="nav-link" href="/explore">Explore <span class="sr-only">(current)</span></a>
            </li>

            <li class="nav-item">
              <a class="nav-link" href="/sign_in">Sign In</a>
            </li>

            <li class="nav-item">
              <a class="nav-link" href="/sign_up">Sign Up</a>
            </li>

            <li class="nav-item">
              <a class="nav-link" href="/about">About</a>
            </li>

          </ul>
        </div>
    </nav>



    <div id="first_row" class = "row">
      <% row1.forEach(function(post){ %>

      <div class = "col">


        <a href="/post_detail/<%=post.post_id%>"><img src="<%= post.image_1 %>" class="rounded index_pic"></a>
        <p><%= post.title %><span class="up"><%= post.up_vote %></span><span class="down"><%= post.down_vote %></span><i class="fas fa-sort-up"></i><i class="fas fa-sort-down"></i><a href="/user_info/<%=post.user_id%>"><img src="<%=post.image%>" class="rounded-circle user_pic"/></a></p>

      </div>
      <% }); %>
    </div>

    <div class = "row">
      <% row2.forEach(function(post){ %>

      <div class = "col">


        <a href="/post_detail/<%=post.post_id%>"><img src="<%= post.image_1 %>" class="rounded index_pic"></a>
        <p><%= post.title %><span class="up"><%= post.up_vote %></span><span class="down"><%= post.down_vote %></span><i class="fas fa-sort-up"></i><i class="fas fa-sort-down"></i><a href="/user_info/<%=post.user_id%>"><img src="<%=post.image%>" class="rounded-circle user_pic"/></a></p>

      </div>
      <% }); %>
    </div>

    <div class = "row">
      <% row3.forEach(function(post){ %>

      <div class = "col">


        <a href="/post_detail/<%=post.post_id%>"><img src="<%= post.image_1 %>" class="rounded index_pic"></a>
        <p><%= post.title %><span class="up"><%= post.up_vote %></span><span class="down"><%= post.down_vote %></span><i class="fas fa-sort-up"></i><i class="fas fa-sort-down"></i><a href="/user_info/<%=post.user_id%>"><img src="<%=post.image%>" class="rounded-circle user_pic"/></a></p>

      </div>
      <% }); %>
    </div>



  </div>









    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>

</body>



</html>
