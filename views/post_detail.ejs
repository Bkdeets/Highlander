<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

    <title>Hello, world!</title>

    <style type="text/css">

      .d-block {

        width:600px;
        height:500px;
        object-fit: cover;

      }


      .comment_row {
      margin-left: 20px;
      margin-top: 8px;
      }

      #image_container{
        width:700px;
        margin: auto 0;
      }

      #main {
        width:1100px;
        margin: 0 18%;


      }


      #left_column {
        margin-top:15px;
        width:700px;
        float: left;

      }

      #right_column{
        margin-top:15px;
        width:380px;
        height: 1000px;
        float: right;
        background-color: #DFECF0;
        border-radius: 10px;


      }

      #creator_pic {
        width:50px;
        height:50px;
        object-fit: cover;
      }

      #detail_block {
        width:360px;
        height:950px;
        margin-left: 10px;
        margin-top: 10px;
        overflow-y: scroll;
    

      }

      #comment_header{
        margin-left: 20px;
        margin-top: 10px;
      }

      #commenter_pic {
        width:40px;
        height:40px;
        object-fit: cover;
      }

      .each_line{
        margin-left: 10px;
        margin-top: 15px;

      }

      #comment_container {
        float:left;
        background-color:#DFECF0;
        width:700px;
        height:485px;
        margin-top: 15px;
        border-radius: 10px;
        overflow-y: scroll;


      }

      #nav_bar{
        background-color: #8FDBF2;
        border-radius: 10px;
      }




    </style>

  </head>




  <body>

    <div id="main">

      <nav id="nav_bar" class="navbar navbar-expand-lg navbar-light">
        <a class="navbar-brand" href="/">Highlander</a>

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">

            <li class="nav-item active">
              <a class="nav-link" href="/explore">Explore <span class="sr-only">(current)</span></a>
            </li>

            <li class="nav-item">
              <a class="nav-link" href="/sign_in">Sign In</a>
            </li>

            <li class="nav-item">
              <a class="nav-link" href="/sign_up">Sign Up</a>
            </li>

            <li class="nav-item">
              <a class="nav-link" href="/about">About</a>
            </li>

          </ul>
        </div>
    </nav>





    <div >



      <div id="left_column">


          <div id="image_container" class="carousel slide" data-ride="carousel">
              <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
              </ol>

              <div class="carousel-inner">
                <div class="carousel-item active">
                <img class="d-block w-100 rounded" src="<%- post.image_1%>" alt="First slide">
                </div>

              <div class="carousel-item">
                <img class="d-block w-100 rounded" src="<%- post.image_2%>" alt="Second slide">
              </div>

              <div class="carousel-item">
                <img class="d-block w-100 rounded" src="<%- post.image_3%>" alt="Third slide">
              </div>
            </div>

            <a class="carousel-control-prev" href="#image_container" role="button" data-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="sr-only">Previous</span>
            </a>

            <a class="carousel-control-next" href="#image_container" role="button" data-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="sr-only">Next</span>
            </a>

          </div>

      </div>

      <div id="right_column">



          <div id="detail_block" >


          <div class="each_line"><img id="creator_pic" src="<%=post.image%>" class="img-thumbnail" /><a href="/user_info/<%=post.user_id%>">----<%=post.user_name%></a></div>
          <div class="each_line"><p><%=post.title%></p></div>
          <div class="each_line"><p><%=post.created%></p></div>
          <div class="each_line"><p><%=post.description%></p></div>

          </div>

      </div>

      <div id="comment_container" >

        <div id="comment_header">
          <h3>Comments:</h3>
        </div>

        <%comments.forEach(function(comment){ %>


        <div class="comment_row">
          <a href="/user_info/<%=comment.user_id%>"><img id="commenter_pic" class="rounded" src="<%=comment.image%>"/></a>
          <a href="/user_info/<%=comment.user_id%>"><%=comment.user_name%> </a>
          <p>
            - <%=comment.comment%> - <%=comment.created%>

          </p>

        </div>


        <%  }); %>

      </div>

      </div>








    </div>






    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
  </body>
</html>
